{
  "name": "nuxt-time",
  "version": "1.0.3",
  "license": "MIT",
  "description": "Safely render local datesÂ and times on the server with Nuxt",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielroe/nuxt-time.git"
  },
  "keywords": [
    "nuxt",
    "module",
    "nuxt-module",
    "date"
  ],
  "author": {
    "name": "Daniel Roe <daniel@roe.dev>",
    "url": "https://github.com/danielroe"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm dev:prepare && nuxt-module-build build",
    "dev": "nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "simple-git-hooks && pnpm nuxt-module-build build --stub && pnpm nuxt-module-build prepare && nuxi prepare playground",
    "docs:dev": "nuxi dev docs",
    "docs:build": "nuxi generate docs",
    "lint": "eslint .",
    "prepack": "pnpm build",
    "prepublishOnly": "pnpm lint && pnpm test",
    "release": "bumpp && pnpm publish",
    "test": "vitest run --coverage",
    "test:types": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@nuxt/kit": "^3.14.159"
  },
  "devDependencies": {
    "@nuxt/eslint-config": "1.0.0",
    "@nuxt/module-builder": "0.8.4",
    "@nuxt/test-utils": "3.15.4",
    "@types/node": "22.9.0",
    "@vitest/coverage-v8": "3.0.5",
    "@vue/test-utils": "2.4.6",
    "bumpp": "10.0.1",
    "changelogithub": "13.12.1",
    "eslint": "9.20.0",
    "happy-dom": "17.0.3",
    "knip": "5.38.2",
    "lint-staged": "15.2.10",
    "magic-regexp": "0.8.0",
    "nuxt": "3.15.4",
    "playwright": "1.48.2",
    "simple-git-hooks": "2.11.1",
    "typescript": "5.6.3",
    "unbuild": "3.0.0",
    "vitest": "3.0.5",
    "vue": "3.5.13",
    "vue-tsc": "2.1.10"
  },
  "peerDependencies": {
    "nuxt": ">=3.12.0"
  },
  "resolutions": {
    "@nuxt/kit": "3.15.4",
    "@nuxt/schema": "3.15.4",
    "nuxt-time": "link:.",
    "vue": "3.5.13"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,json,.*rc}": [
      "npx eslint --fix"
    ]
  },
  "packageManager": "pnpm@9.13.2"
}
